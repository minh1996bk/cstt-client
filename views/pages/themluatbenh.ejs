<p><a href="/quanlybenh">Trở về trang quản lý luật bệnh</a></p>
<div class="ui-widget" style="margin: 50px;">
    <div class="form-group"> 
        <label for="result-selector">Chọn bệnh: </label>
        <input id="result-text" name="result" class="form-control" oninput="findResult()" placeholder="Chọn bệnh">
        <label for="symptons-seletor">Chọn các triệu chứng: </label>
        <input id="event-text" class="form-control" oninput="findEvent()" placeholder="Chon triệu chứng bệnh">
        <div id="event-list">
            <div id="tag" style="margin: 10px;">
                
            </div>
        </div>
        <label for="rate">Tỉ lệ</label>
        <input id="rate" class="form-control">
        <button id="create-rule-btn" class="btn mybtn " style="border: 0.5px solid #b7bec9">Tạo mới</button>
    </div>
</div>
<script>
    $('#create-rule-btn').on('click', function() {
        let result = $('#result-text').val();
        let rate = $('#rate').val();
        if (!result || !events) return;
        let newRule = {
            type: 'benh',
            result: result,
            events: events,
            rate: rate
        }
        $.post('/taoluatbenh', newRule, function(data) {
            events = [];
            $('#tag').empty();
            $('#result-text').val('');
            $('#rate').val("0");
            window.alert('Tạo luật mới thành công');
        });
        
    });
</script>